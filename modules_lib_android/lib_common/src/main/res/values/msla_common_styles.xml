<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/msla_colorPrimary</item>
    <item name="colorPrimaryDark">@color/msla_colorPrimaryDark</item>
    <item name="colorAccent">@color/msla_colorAccent</item>
  </style>

  <style name="BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
    <item name="android:windowIsFloating">false</item>
    <item name="android:statusBarColor">@android:color/transparent</item>0
    <item name="android:windowSoftInputMode">adjustResize</item>
  </style>

  <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
    <item name="android:background">@color/msla_colorPrimary</item>
    <item name="android:textColorPrimary">@android:color/white</item>
  </style>

  <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:background">@drawable/msla_common_round_button_selector</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="ShoppingListItemTitle">
    <item name="android:textSize">22sp</item>
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="ShoppingListItemCreatedDate">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@android:color/secondary_text_dark</item>
  </style>

  <style name="ShoppingListItemCardView">
    <item name="android:background">@android:color/white</item>
    <item name="cardElevation">6dp</item>
    <item name="android:elevation">6dp</item>
    <item name="cardCornerRadius">6dp</item>
  </style>

  <style name="EmptyShoppingListTitle">
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textSize">22sp</item>
  </style>

  <style name="EmptyShoppingListSubtitle">
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textSize">16sp</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="CommonEditText">>
    <item name="android:inputType">textCapSentences</item>
  </style>
</resources>

