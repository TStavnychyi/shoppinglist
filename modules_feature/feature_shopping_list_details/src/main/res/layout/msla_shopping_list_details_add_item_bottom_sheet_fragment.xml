<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/msla_common_bottom_sheet_background"
    android:padding="16dp">

  <EditText
      android:id="@+id/view_item_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="6dp"
      android:hint="@string/msla_shopping_list_details_item_name_hint"
      android:importantForAutofill="no"
      android:inputType="text"
      app:layout_constraintBottom_toTopOf="@id/view_item_additional_info"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <EditText
      android:id="@+id/view_item_additional_info"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="24dp"
      android:hint="@string/msla_shopping_list_details_item_additional_info_hint"
      android:importantForAutofill="no"
      android:inputType="text"
      app:layout_constraintBottom_toTopOf="@id/view_add_item_button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/view_add_item_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:enabled="false"
      android:text="@string/msla_shopping_list_details_save_item_button_title"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      style="@style/ButtonStyle" />

</androidx.constraintlayout.widget.ConstraintLayout>